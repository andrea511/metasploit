
// **************************************
// * LOGIN
// **************************************

body#login {
  background-color: #6bc0df;
  color: #61686d;
  padding-bottom: 60px;

  h1.r7logo {
    text-align: center;
    margin: 0;
    padding: 0;
  }

  .flash {
    margin: 0 auto;
    width: 250px;
  }

  p {
    color: #9cadad;
    text-shadow: 0px 1px 1px #fff;
    font-size: 12px;
    &.noscript_warning {
      position: absolute;
      left: 0;
      right: 0;
      color: red;
    }
  }

  a.support {
    display: block;
    color: whiteSmoke;
    font-size: 10px;
    text-align: center;
    margin: 0 auto;
    margin-top: 20px;
    text-decoration: none;
    width: 150px;
  }

  a.support:hover {
    text-decoration: underline;
  }

  #box {
    background: #ffffff ;
    background: url(<%= image_path 'box_new.png' %>);
    width: 412px;
    height: 241px;
    margin: 0 auto;
    display: block;
    border: none;
    position: relative;
    z-index: 0;

    form {
      position: relative;

      a.forgot {
        display: block;
        position: absolute;
        left: 81px;
        top: 278px;
      }

      input{font-weight: lighter;}

      input[type=text], input[type=password] {
        position: absolute;
        border: none;
        background: none;
        display: block;
        height: 30px;
        width: 310px;
        padding: 10px;
        color: #999999;
        font-size: 20px;
        font-weight: lighter;
        text-shadow: 0px 1px 1px #e7e7e7;
      }

      input[type=text]:focus, #box form input[type=password]:focus {
        outline: none;
        color: #666666;
      }

      input[type=text]{
        left: 81px;
        top: 141px;
      }

      input[type=password]{
        left: 81px;
        top: 198px;
      }

      input[type=checkbox] {
        position: absolute;
        left: 81px;
        top: 279px;
      }

      input[type=submit] {
        background: url(<%= image_path 'button.png' %>) no-repeat;
        border: none;
        display: block;
        position: absolute;
        top: 266px;
        right: 76px;
        left: auto;

        width: 160px;
        height: 41px;
        color: #5e7171;
        font-weight: bold;
        font-size: 18px;
        text-shadow: 0px 1px 0px #fff;
        cursor: pointer;
      }

      input[type=submit]:hover{
        background-position: 0 -41px;
      }

      input[type=submit]:active{
        background-position: 0 -82px;
      }

      label {
        position: absolute;
        left: 60px;
        top: 180px;
        color: #8d8b8b;
        font-weight: 200;
      }

    }
  }

    h1.logo {
      color: #fff;
      font-weight: 200;
      width: 303px;
      text-align: center;
      font-size: 28px;
      margin: 0 auto;
      margin-bottom: 2%;
      padding-top: 150px;
      text-shadow: 0px 1px 1px #000;
    }

}
// get rid of some ie nonsense
::-ms-clear {
   display: none;
}
::-ms-reveal {
   display: none;
}
