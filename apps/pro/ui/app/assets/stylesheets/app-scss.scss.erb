  &.express {
    background-image: image-url('logos/express.png');
    @include image-2x(image-path('logos/express@2x.png'), 132px, 34px);
  }

  // Nexpose Ultimate Edition
  &.ultimate {
    background-image: image-url('logos/nxultimate.png');
    @include image-2x(image-path('logos/nxultimate@2x.png'), 132px, 34px);
  }
}

