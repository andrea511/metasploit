        }
      }
      &:hover {
        background: transparent;
        a, span.badge {
          color: $orange-header-background-color;
          span.badge {
            color: white;
            background: $orange-header-background-color;
            border-color: $orange-header-background-color;
          }
        }
      }
      a {
        font-family: $menu-font-family;
        font-size: 12px;
        color: $top-strip-text-color;
        background-image: none !important;
        padding: 0 14px;
        font-weight: 600;
        line-height: 36px;
        @import "shared/_badges";

        .badge {
          line-height: 17px;
        }
      }

      ul.sub-menu {
        display: none;
        padding-top: 3px;
        width: auto;

        li {
          width: 100%;
          height: 23px;
          border: none;

          a {
            color: $top-strip-text-color !important;
            line-height: 23px;
            font-size: 11px;
            font-weight: normal;
            padding-right: 20px;
          }

          a:hover {
            color: $orange-header-background-color;
          }
        }
      }

      ul.sub-menu:hover {
        display: block;
      }
    }
    li.dropdown {
      border-left: 1px solid #fff;
    }
    li.dropdown:hover {
      background: $dropdown-menu-background-color;
      border: 1px solid $dropdown-menu-border-color;
      border-top: 1px solid transparent;
      box-shadow: 2px 2px 3px rgba(0,0,0,.2);
      ul.sub-menu {
        background: $dropdown-menu-background-color;
        border: 1px solid $dropdown-menu-border-color;
        border-top: none;
        box-shadow: 2px 2px 3px rgba(0,0,0,.2);
        a {
          color: $dropdown-menu-text-color;
          white-space: nowrap;
        }
        display: block;
        position: absolute;
        list-style: none;
        top: 30px;
        left: -1px;
        z-index: 10000;
        li:hover {
          background: #DCF7FD;
        }
      }
    }
  }
}


