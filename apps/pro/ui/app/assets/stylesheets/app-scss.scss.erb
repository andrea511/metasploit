#header-strip {
  background: #F2F2F2;
  position: absolute;
  top: 0;
  left: 50%;
  right: 0;
  height: 28px;
}
#header {
  font-family: $menu-font-family;
  background: white;
  min-width: $min-app-width;
  position: relative;
  padding: 0;

  #header-top-border {
    display: none;
  }

  &>a#logo-wrap {
    // link surrounding the logo image
    position: absolute;
    left: 0;
    top: 0;
    $shadow-width: 73px;
    padding-right: $shadow-width;
    background-image: image-url('top_left_logo_drop_shadow.png');
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: right;
    height: 64px;
    width: 240px - $shadow-width;

    span#logo {
      @extend %logo;
    }
  }

  #top-menu {
    text-align: right;
    font-size: 11px;
    @include linear-gradient-horizontal(#ededed, #f2f2f2);
    color: $top-strip-text-color;
    height: 28px;
    padding: 0;
    margin-left: 170px;
    a {
      font-size: 12px;
      font-family: $menu-font-family;
      color: $top-strip-text-color;
      padding: 0 6px;
      line-height: 20px;
      font-weight: 600;
    }

    span.route_notice {
      color: #333;
      padding: 6px 6px;
    }

    ul.drop-menu {
      list-style: none;
      text-align: right;
      display: inline-block;
      margin: 0;
      padding: 0;
      position: relative;
      height: 28px;
      bottom: 4px;
      &.menu-left {
        float: left;
        padding-left: 36px;
        ul.sub-menu {
          right: auto;
          left: -1px;
        }
      }
      li {
        float: left;
        text-align: left;
        position: relative;
        padding: 7px 0 0 2px;
        height: 33px;
        $menu-border-color: #ddd;
        &>a:hover {
          text-decoration: none;
          color: #000;
        }

        &>a.help-link {
          font-family: $helvetica-neue-font-family;
          font-size: 1.6em;
          line-height: 18px;
        }

        &.notification-menu {
          $notification-menu-height: 32px;
          font-family: "Trebuchet MS", Helvetica, sans-serif;
          height: $notification-menu-height;
          padding: 0;
          width: auto;
          margin-left: 5px;

          &>a {
            color: #FFFFFF;
            font-size: 1.4em;
            padding: 0px 6px;
            min-width: 17px;
            display: block;
            text-align: center;
            margin: 0;
            line-height: ($notification-menu-height)+2px;
            text-shadow: 0 1px 3px rgba(0,0,0, .15);
          }
        }

        &.menu {
          border: 1px solid transparent;
          border-bottom: none;

          &:hover, &.hover {
            background: #fff;
            border: 1px solid $menu-border-color;
            border-bottom: none;
            box-shadow: 0, -2px, 3px, rgba(0,0,0,.2);
            ul.sub-menu {
              display: block;
            }

            &>a {
              z-index: 20000;
              position: relative;
              text-decoration: none;
            }
          }

          li#account-menu-wrapper {
            width: 180px;
          }

          &>a.menu {
            font-weight: bold;
            display: inline-block;
            padding-left: 12px;
            padding-right: 12px;
            background-image: none !important;

            &:hover {
              text-decoration: none;
            }
          }

          small {
            display: inline;
          }

          ul.sub-menu {
            background: #fff;
            border: 1px solid $menu-border-color;
            border-top: none;
            box-shadow: 0 2px 3px rgba(0,0,0,.2);
            display: none;
            margin: 0;
            margin-right: 10px;
            padding: 0;
            list-style: none;
            position: absolute;
            width: auto;
            top: 26px;
            right: -11px;
            z-index: 10000;
            hr {
              border: none;
              border-top: 1px solid #fff;
              background: #fff;
              border-bottom: 1px solid #e6e6e6;
              height: 1px;
              margin: 3px 0;
              width: 100%;
            }
            li {
              position: relative;
              a {
                color: $top-strip-text-color;
                display: block;
                padding-left: 8px;
                padding-right: 8px;
                display: block;
                overflow: hidden;
                height: 23px;
                line-height: 23px;
                font-size: 11px;
                font-weight: normal;
                white-space: nowrap;
                &:hover {
                  text-decoration: none;
                }
              }
              &:hover{
                background-color: #DCF7FD;

                ul.sub-sub-menu {
                  display: block;
                }
              }

              &.divider {
                width: 90%;
                border-top: 1px solid #959595;
                border-bottom: 1px solid #e6e6e6;
                height: 0px;
                margin: 2px 5% 2px 5%;
              }

              &.more {
                &:after {
                  position: absolute;
                  right: 4px;
                  width: 15px;
                  top: 0;
                  bottom: 0;
                  font-size: 18px;
                  content: 'â€º';
                  color: #a0a0a0;
                }
              }

              text-align: left;
              clear: both;
              padding: 0px;
              width: 100%;
              height: 23px;

              &:first-child {
                margin-top: 3px;
              }

              &:last-child {
                margin-bottom: 3px;
              }
            }

            ul.sub-sub-menu {
              display: none;
              position: absolute;
              right: -132px;
              top: -4px;
              background-color: $dropdown-menu-background-color;
              box-shadow: 2px 2px 3px rgba(0,0,0,.2);
              //opacity: 0.9;
              display: none;
              margin: 0px;
              margin-right: 10px;
              padding: 0px;
              list-style: none;
              position: absolute;
              width: auto;
              z-index: 10000;
              border: 1px solid $dropdown-menu-border-color;
              min-width: 120px;
              @import "shared/_badges";
              .count, .badge {
                font-size: 9px;
                padding: 0 1px;
                font-size: 9px;
                height: 16px;
                min-width: 16px;
                line-height: 15px;
                position: relative;
                top: -1px;
              }
              li {
                a {
                  background-image: none;
                }
              }
            }
          }
        }
      }
    }
  }
}

#workspace_nav {
