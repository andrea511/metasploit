<% if  !request.xhr? %>
<% title "New Vuln" -%>
<% breadcrumb workspace_link, hosts_link, host_link, link_to('New Vuln', '#') -%>

<% include_view_javascript -%>

<div class="one_col_no_sidebar">
	<%= required_label %>

	<%= semantic_form_for [:host, @vuln] do |f| -%>
		<%= render 'form', :f => f %>

		<%= f.actions do -%>
			<span class="btn"><%= f.submit 'Save', :class => "save" %></span>
			<span class="btn"><%= link_to "Cancel", :back, :class => "cancel" %></span>
		<% end -%>
	<% end -%>
</div> 
<% else %>
  <%= semantic_form_for [:host, @vuln] do |f| -%>
    <%= render template: "vulns/edit", :f =>f %>
  <% end %>
<% end %>