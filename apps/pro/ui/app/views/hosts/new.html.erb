<% title "New Host" %>
<% breadcrumb workspace_link, hosts_link %>


<div class="one_col_no_sidebar">
	<%= semantic_form_for @host do |f| %>
		<%= render 'form', :f => f %>

		<%= f.actions do -%>
			<span class="btn"><%= f.submit 'Save', :class => "save" %></span>
			<span class="btn"><%= link_to "Cancel", hosts_path, :class => "cancel" %></span>
		<% end -%>
  <% end %>
</div>
