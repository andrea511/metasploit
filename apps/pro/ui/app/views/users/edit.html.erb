

<% breadcrumb link_to("User Settings #{h @user.username}  #{(License.get.multi_user? and @user.admin?) ? "(Administrator)" : "" }", edit_user_path(:current)) %>

<%= semantic_form_for @user do |f| %>
	<%= render "shared/error_messages", :target => @user %>
	<div class="one_col_no_sidebar">
		<%= f.inputs "Contact Info" do -%>
		<%= f.input :fullname, :label => "Full name", :input_html => {:tabindex => 1} %>
		<%= f.input :email, :label => "Email", :input_html => {:tabindex => 2} %>
		<%= f.input :company, :label => "Organization", :input_html => {:tabindex => 3} %>
		<% end -%>

		<%= f.inputs "Preferences" do -%>
		<%= f.input :time_zone, :as => :time_zone, :input_html => {:tabindex => 4} %>
		<% end -%>

		<%= f.actions do -%>
			<span class="btn"><%= f.submit 'Save Settings', :class => "save" %></span>
		<% end -%>

		<%= f.help_link :fullname do -%>
			<h3>Contact Info</h3>
			<p>If provided, your contact info will be included in the reports that you generate.</p>
		<% end -%>
	</div>
<% end %>

<%= semantic_form_for @user do |f| %>
	<%= render "change_password_fields", :f => f %>
<% end %>
