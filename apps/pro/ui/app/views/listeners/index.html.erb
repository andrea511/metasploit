<% title "Listeners" %>
<% breadcrumb link_to("Global Settings", settings_path), link_to("Listeners", listeners_path) %>

<% include_view_javascript -%>

<%# TODO: This should be a block helper method. -%>
<% if License.get.supports_listeners? %>
  <div id="listener_container">
    <%= render "listeners/listeners", :listeners => @listeners %>
  </div>
<% else %>
  <h1>Unsupported Feature</h1>
  <p>This product edition does not support Listeners. Please upgrade to use this feature.</p>
<% end %>
